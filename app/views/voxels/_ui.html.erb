<!-- UI -->
<div id="ui_base">

    <!-- color picker -->
    <div id="color_picker_ui">
        <input type="text" id="color" name="color" />
    </div>

    <!-- キューブ数 -->
    <div id="cube_num">
        cube num : <span class="badge badge-success">0</span>
    </div>

    <!-- キューブ全消去	 -->
    <a class="btn btn-danger btn-block" onClick="clearAllCube()">Clear all cube</a>

    <!--デモ（回転）開始-->
    <a id="demo_button"   onClick="toggleDemo()"   class="btn btn-primary btn-block">
        <i class="icon-play"></i>
        Start Demo
    </a>
    <a id="mirror_button" onClick="toggleMirror()" class="btn btn-warning btn-block">
        <i class="icon-play"></i>
        Start Mirror
    </a>

    <!-- 保存 -->
    <a data-toggle="modal" href="#saveModal" id="save_button" onClick="saveJSONLocally()" class="btn btn-success btn-block">
        <i class="icon-archive"></i>
        Save
    </a>
    <div class="modal fade" id="saveModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">データをローカルに保存しますか？</h4>
                </div>
                <div class="modal-body">
                    データ:xxxxxxxxxxxxxxxxxxxxxxxx
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">はい</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 投稿 -->
    <a data-toggle="modal" href="#submitModal" id="submit_button" onClick="submitConfirm()" class="btn btn-primary btn-block">
        <i class="icon-cloud"></i>
        Submit
    </a>
    <div class="modal fade" id="submitModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">データをサーバにアップロードしますか？</h4>
                </div>

                <form 
                accept-charset="UTF-8" 
                action="http://192.168.33.10:3000/voxeljsons" 
                class="new_voxeljson" 
                id="new_voxeljson" 
                method="post">
                <div style="margin:0;padding:0;display:inline">
                    <input name="utf8" type="hidden" value="✓">
                    <input name="authenticity_token" type="hidden" value="vRFl2PUhw9v6e2gh402idJJcOlcvAsUpTz7n5nZ6+yY=">
                </div>

                <div class="modal-body">
                    <!-- 送信内容 -->
                    <textarea id="submitData" name="voxeljson[json]" style="width:550px; height:400px"></textarea>
                </div>

                <div class="modal-footer">
                    <!-- 送信ボタン -->
                    <input class="btn btn-primary" name="commit" type="submit" value="Submit">
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Webからインポート -->
