<!-- UI -->
<div id="ui_base">
    <a class="btn btn-danger btn-block" onClick="clearAllCube()">
        <i class="icon-list"></i>
        Show/Hide UI
    </a>

    <!-- color picker -->
    <div id="color_picker_ui">
        <input type="text" id="color" name="color" />
    </div>

    <!-- キューブ数 -->
    <div id="cube_num">
        cube num : <span class="badge badge-success">0</span>
    </div>

    <%= render :partial => 'voxels/new/ui/manual' %>
    <%= render :partial => 'voxels/new/ui/sound' %>

    <!-- キューブ全消去	 -->
    <a class="btn btn-danger btn-block" onClick="clearAllCube()">
        <i class="icon-eraser"></i>
        Clear all cube
    </a>

    <!--デモ（回転）開始-->
    <a id="demo_button"   onClick="toggleDemo()"   class="btn btn-primary btn-block">
        <i class="icon-play"></i>
        Start Demo
    </a>
    <a id="mirror_button" onClick="toggleMirror()" class="btn btn-warning btn-block">
        <i class="icon-play"></i>
        Start Mirror
    </a>

    <!-- 保存 -->
    <a data-toggle="modal" href="#saveModal" id="save_button" onClick="saveJSONLocally()" class="btn btn-success btn-block">
        <i class="icon-archive"></i>
        Save
    </a>
    <div class="modal fade" id="saveModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">データをローカルに保存しますか？</h4>
                </div>
                <div class="modal-body">
                    データ:xxxxxxxxxxxxxxxxxxxxxxxx
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">はい</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 投稿 -->
    <a data-toggle="modal" href="#submitModal" id="submit_button" onClick="submitConfirm()" class="btn btn-primary btn-block">
        <i class="icon-cloud"></i>
        Submit
    </a>
    <div class="modal fade" id="submitModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">データをサーバにアップロードしますか？</h4>
                </div>

              <%= render 'form_filled' %>

        </div>
    </div>
</div>

<!-- Webからインポート -->
<a data-toggle="modal" href="#importFromWeb" onClick="prepareImportButtons()" class="btn btn-success btn-block">
    <i class="icon-cloud-download"></i>
    Import from Web
</a>
<div class="modal fade" id="importFromWeb">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Webからインポート</h4>
            </div>

            <div id="importButtons" class="modal-body">
                <button class="btn btn-primary" onClick="importFromWeb(6)" width="100px">id 6</button>
                <button class="btn btn-primary" onClick="importFromWeb(7)">id 7</button>
            </div>

            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<!-- テキストからインポート -->
<a data-toggle="modal" href="#importFromText" class="btn btn-success btn-block">
    <i class="icon-cloud-download"></i>
    Import from Text
</a>
<div class="modal fade" id="importFromText">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">テキストからインポート</h4>
            </div>
            <div class="modal-body">
                テキスト入力
                <textarea>
                    AAA
                </textarea>
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary">Import</button>
            </div>
        </div>
    </div>
</div>

<!-- エクスポート -->
<a class="btn btn-primary btn-block">Export into Text</a>

